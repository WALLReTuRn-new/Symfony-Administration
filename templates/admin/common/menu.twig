<div class="main-sidemenu is-expanded">
	<div class="slide-left disabled active d-none" id="slide-left">
		<svg xmlns="http://www.w3.org/2000/svg" fill="#7b8191" width="24" height="24" viewbox="0 0 24 24">
			<path d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"></path>
		</svg>
	</div>
	<ul class="side-menu open" style="margin-right: 0px;">
		<li class="side-item side-item-category">Main</li>
		{% for menu in menus %}
			<li class="slide">
				<a class="side-menu__item active is-expanded" data-bs-toggle="slide" href="javascript:void(0);">
					{{menu.icon | raw}}
					<span class="side-menu__label">{{menu.name}}</span>
					<i class="angle fa-solid fa-chevron-right"></i>
				</a>
				<ul class="slide-menu" style="display: none;">
					<li class="side-menu__label1">
						<a href="javascript:void(0);">{{menu.name}}</a>
					</li>

					{% for children in menu.children%}
						<li class="is-expanded">
							<a class="slide-item active" href="{{children.href}}">{{children.name}}</a>
						</li>
					{% endfor %}
				</ul>
			</li>
		{% endfor %}
	</ul>
	<div class="slide-right" id="slide-right">
		<svg xmlns="http://www.w3.org/2000/svg" fill="#7b8191" width="24" height="24" viewbox="0 0 24 24">
			<path d="M10.707 17.707 16.414 12l-5.707-5.707-1.414 1.414L13.586 12l-4.293 4.293z"></path>
		</svg>
	</div>
</div>
